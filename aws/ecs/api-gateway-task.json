{
  "family": "chat-microservices-api-gateway",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-west-2.amazonaws.com/chat-microservices/api-gateway:latest",
      "portMappings": [
        {
          "containerPort": 8765,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE",
          "value": "http://discovery-server.chat-microservices.local:8761/eureka/"
        }
      ],
      "dependsOn": [
        {
          "containerName": "discovery-server",
          "condition": "HEALTHY"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8765/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/chat-microservices",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "api-gateway"
        }
      }
    }
  ]
}